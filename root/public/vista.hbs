<h3 class="text-primary"> Vista de Productos </h3>
<br>
{{#if products.length}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr class="text-warning">
                <th class="font-weight-bold">Nombre</th>
                <th class="font-weight-bold">Precio</th>
                <th class="font-weight-bold">Foto</th>
            </tr>
            {{#each products}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td><img class="icon" src={{this.image}} alt={{this.id}}></td>
                </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <h3 class="alert alert-danger">no se encontraron productos</h1>
{{/if}}
